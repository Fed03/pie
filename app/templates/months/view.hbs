<div class="mui-col-xs-12">
  <div class="month-summary mui-panel">
    <div class="mui--divider-bottom month-summary-header">
      <a href="#">{{model.name}} overview <i class="fa fa-chevron-right pull-right"></i></a>
    </div>
    <div class="month-summary-content">
      <table class="mui-table">
        <tbody>
          <tr>
            <td>Opening balance</td>
            <td class="month-summary-balance">2,145.56</td>
          </tr>
          <tr>
            <td>Current balance</td>
            <td class="month-summary-balance">989.45</td>
          </tr>
          <tr>
            <td>&nbsp;</td>
            <td class="mui--divider-top month-summary-balance month-summary-balance-total expense-amount">-1,952.46</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="mui-col-xs-12">
  <div class="mui-row">
    <div class="mui-col-xs-12 transactions-container">
      {{#each transactionsByDate as |transactionsSet|}}
        {{transaction-panel transactions=transactionsSet.items date=transactionsSet.value}}
      {{else}}
        <div class="no-transactions">
          <span>No transactions.</span>
          <span>Add (+) some!</span>
        </div>
      {{/each}}
    </div>
  </div>
</div>
