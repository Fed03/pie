<div class="mui-col-xs-12">
  <div class="month-summary mui-panel">
    <div class="mui--divider-bottom month-summary-header">
      {{model.name}} overview
    </div>
    <div class="month-summary-content">
      <div>
        <span>Opening balance</span>
        <span class="month-summary-balance" data-test-selector="opening-balance-value">
          {{format-money model.openingBalance format="%s %v"}}
        </span>
      </div>
      <div>
        <span>Current balance</span>
        <span class="month-summary-balance" data-test-selector="current-balance-value">
          {{format-money currentBalance format="%s %v"}}
        </span>
      </div>
      <div>
        <span class="mui--divider-top month-summary-balance month-summary-balance-total expense-amount" data-test-selector="month-balance-value">
          {{format-money model.balance}}
        </span>
      </div>
    </div>
  </div>
</div>
<div class="mui-col-xs-12">
  <div class="mui-row">
    <div class="mui-col-xs-12 transactions-container">
      {{#each transactionsByDate as |transactionsSet|}}
        {{transaction-panel transactions=transactionsSet.items date=transactionsSet.value}}
      {{else}}
        <div class="no-transactions">
          No transactions.
          <small>Add (+) some!</small>
        </div>
      {{/each}}
    </div>
  </div>
</div>
{{#link-to 'create-transaction' class="mui-btn mui-btn--fab mui-btn--primary create-transaction-link"}}
  <i class="fa fa-plus" aria-hidden="true"></i>
{{/link-to}}
